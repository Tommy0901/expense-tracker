extends layouts/main

block navbar 
  a.btn.btn-outline-primary(href="/logout", role="button") Sign out

block body 
  .container(style="width: 720px;")
    .d-flex.flex-column.align-items-center
      h3.mt-2 Revise entry
      .my-3(style="width: 100%;")
        form(action="/edit/" + id+ "?_method=PUT", method="POST")
          include partials/entry
          .btn-control.d-flex.just-content-evenly
            button.btn.btn-success.mx-auto.mt-3(style="width: 14rem;") Update
            a.btn.btn-dark.mx-auto.mt-3(style="width: 14rem", href="/") Cancel