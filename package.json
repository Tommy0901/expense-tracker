{
  "name": "expense-tracker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc -p ./ && cpy .env dist && npm run view && npm run public",
    "view": "npm run view-dir && xcopy /Y /E src\\views\\* dist\\views\\",
    "view-dir": "if not exist dist\\views mkdir dist\\views",
    "public": "npm run public-dir && xcopy /Y /E src\\public\\* dist\\public\\",
    "public-dir": "if not exist dist\\public mkdir dist\\public\\javascripts dist\\public\\stylesheets",
    "seed": "node dist/seeders",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongoose": "^8.2.4",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.2",
    "@types/pug": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "typescript": "^5.4.3"
  }
}
