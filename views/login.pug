extends layouts/main

block body 
  .border(style="width:600px; margin: 0 auto;")
    .login.d-flex.flex-column.align-items-center
      .p-5
        h1.text-center.mb-4 Account Login

        form(action="/login", method="post")
          .mb-3
            label.form-label(for="Email") Email
            input.form-control(type="email", id="Email", placeholder="Email", name="email", value=email)
          .mb-3
            label.form-label(for="Password") Password
            input.form-control(type="password", id="Password", placeholder="Password", name="password", value=password)
          .mb-3
            input.form-check-input.me-1(type="checkbox", id="rememberMe", name="rememberMe", checked=rememberMe? true : false)
            label(for="rememberMe") Remember Me
          .d-flex.justify-content-center.my-4.flex-column
            button.btn.btn-primary.mb-2(type="submit") Sign In
            .d-flex.justify-content-evenly.mt-3.SSO
              include partials/oauth-icon
          .d-flex.justify-content-center.align-items-center.text-center.mt-4
            h5.pt-2 Don't have an Account?
            a.btn.btn-outline-dark.ms-4(href="/register", style="white-space: nowrap;") Sign Up